<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<!-- 프로필 -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/main_to_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/fi_menu"
            android:layout_gravity="left"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="50dp" />


        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bu" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="135dp"
            android:background="@drawable/line" />

    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="WooHee 가 추천해드려요!"
        android:textColor="@color/black"
        android:textSize="17dp"
        />

    <!-- 메인 추천지-->
    <HorizontalScrollView
        android:layout_width="330dp"
        android:layout_height="370dp"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:id="@+id/main_to_besttrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Main_Boracay"
                android:layout_width="330dp"
                android:layout_height="370dp"
                android:scaleType="fitXY"
                android:src="@drawable/boracay" />

            <ImageView
                android:layout_width="330dp"
                android:layout_height="370dp"
                android:id="@+id/Main_china"
                android:src="@drawable/china"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="330dp"
                android:layout_height="370dp"
                android:id="@+id/Main_osaka"
                android:src="@drawable/osaka"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="330dp"
                android:layout_height="370dp"
                android:id="@+id/Main_sydney"
                android:src="@drawable/sydney"
                android:scaleType="fitXY"/>

        </LinearLayout>
    </HorizontalScrollView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">
        
        <android.widget.Button
            android:id="@+id/main_to_upreview"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/button_res_rounded_color_main"
            android:drawableStart="@drawable/fi_edit"
            android:paddingLeft="5dp"
            android:text="내 리뷰 작성하기 !"
            android:textColor="@color/white"
            />


        <android.widget.Button
            android:id="@+id/main_to_review"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_rounded_color_sub"
            android:drawableStart="@drawable/fi_eye"
            android:paddingLeft="15dp"
            android:text="리뷰 보러가기 !"
            android:textColor="@color/white"
            />
    </LinearLayout>
        <!-- 리뷰-->



</LinearLayout>
    </ScrollView>

