<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >


    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/oval" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/line" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                >

                <!-- 첫 번째 열 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/boracay2"
                        android:id="@+id/best_trip_boracay"
                        android:clickable="true"/>

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/sydney2"
                        android:id="@+id/best_trip_sydney"
                        android:clickable="true"/>

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/paris2"
                        android:id="@+id/best_trip_paris"
                        android:clickable="true"/>

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/czech2"
                        android:id="@+id/best_trip_czech"
                        android:clickable="true"/>

                </LinearLayout>

                <!-- 두 번째 열 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/china2"
                        android:id="@+id/best_trip_china"
                        android:clickable="true"/>

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/osaka2"
                        android:id="@+id/best_trip_osaka"
                        android:clickable="true"/>

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/singapore2"
                        android:id="@+id/best_trip_singapore"
                        android:clickable="true"/>

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/hawaii2"
                        android:id="@+id/best_trip_hawaii"
                        android:clickable="true"/>


                </LinearLayout>

            </GridLayout>

        </ScrollView>

    </FrameLayout>

</LinearLayout>


