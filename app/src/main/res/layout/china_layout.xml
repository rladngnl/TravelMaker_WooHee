<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="top"
        android:scaleType="fitXY"
        android:src="@drawable/china"
        android:id="@+id/china_overlay1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/china_overlay1">

        <android.widget.Button
            android:id="@+id/china_info1_btn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@color/main"
            android:layout_weight="1"
            android:onClick="onClicked"
            android:text="정보"
            android:fontFamily="@font/applesdgothicneo"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <android.widget.Button
            android:id="@+id/china_info2_btn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@color/main"
            android:onClick="onClicked"
            android:layout_toRightOf="@+id/china_info"
            android:layout_weight="1"
            android:text="관광"
            android:fontFamily="@font/applesdgothicneo"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <android.widget.Button
            android:id="@+id/china_info3_btn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@color/main"
            android:onClick="onClicked"
            android:layout_toRightOf="@+id/china_info2"
            android:layout_weight="1"
            android:text="식당"
            android:fontFamily="@font/applesdgothicneo"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:text=" 베이징 5월 날씨 \n \n 한여름의 입구, \n 강한 햇빛에 대비하세요."
            android:fontFamily="@font/applesdgothicneo"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/baseline_wb_sunny_24"
            android:layout_toRightOf="@+id/weather"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="베이징 특가 항공권 "
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/applesdgothicneo"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/u_plane_fly"
            android:id="@+id/plane_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/plane_icon"
            android:text="가격정보 \n \n항공권 보러가기"
            android:fontFamily="@font/applesdgothicneo"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:textSize="15dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>


    </RelativeLayout>


</LinearLayout>
</ScrollView>